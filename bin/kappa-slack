#!/usr/bin/env ruby

ENV['ENV'] ||= 'development'
require 'bundler'
Bundler.setup(:default, ENV['ENV'])

APP_ROOT = File.expand_path("#{File.dirname(__FILE__)}/..")
LIB_PATH = File.join(APP_ROOT, 'lib')
$LOAD_PATH.unshift(LIB_PATH)

require 'dotenv'
Dotenv.load

require 'kappa-slack'
KappaSlack::CLI.start(ARGV)
